        gp="gopass show -c" \
        v="nvim " \
        py="python3" \
        r="ranger"

# Directories

alias \
        h="cd /home/danny/;                             LIST_CONTENTS;" \
        d="/home/danny/Downloads;                       LIST_CONTENTS;" \
        D="/home/danny/Documents/;                      LIST_CONTENTS;" \
        cf="/home/danny/.config/;                       LIST_CONTENTS;" \
        co="/home/danny/coding/;                        LIST_CONTENTS;" \
        cop="/home/danny/coding/python/;                LIST_CONTENTS;" \
        copa="/home/danny/coding/python/algotrading/;   LIST_CONTENTS"
                

# Configure files

alias \
        acf="nvim ~/.alias" \
        vcf="nvim ~/.config/nvim/init.vim" \
        zcf="nvim ~/.zshrc" \
        dot="/usr/bin/git --git-dir=$HOME/.dot/.git/ --work-tree=$HOME/"

# Better Commands

alias \
	ls="ls --color=auto -a" \
	rn="mv" \
	nano="nano -l"

# 'apt' to 'pacman' wrapper

function p() {
        case "$1" in
                -Syyu ) command sudo apt update && sudo apt upgrade ;;
                -Syy ) command sudo apt update ;;
                -Sy ) command sudo apt update ;;
                -Si ) command sudo apt search "${@:2:$#}";;
                -Ss ) command sudo apt list "${@:2:$#}";;
                -S ) command sudo apt install "${@:2:$#}" ;;
                -R ) command sudo apt remove "${@:2:$#}";;
                * ) command sudo apt "$@" ;;
        esac
}
